{
  "extends": "react-app",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "ecmaVersion": 6
    }
  },
  "rules": {
    "quotes": [1, "single"],
    "object-curly-spacing": [1, "always"],
    "jsx-quotes": [1, "prefer-double"],
    "react/jsx-first-prop-new-line": [1, "multiline"],
    "react/jsx-max-props-per-line": [1, {"maximum": 1}],
    "react/jsx-closing-bracket-location": [1, {"selfClosing": "tag-aligned", "nonEmpty": "tag-aligned"}],
    "react/jsx-indent-props": [1, 2],
    "react/jsx-indent": [1, 2, {"checkAttributes": true, "indentLogicalExpressions": true}],
    "react/jsx-curly-brace-presence": [1, { "props": "never", "children": "never" }],
    "react/jsx-curly-newline": [2, {"multiline": "consistent", "singleline": "forbid"}],
    "react/jsx-curly-spacing": [2, {"when": "never", "children": {"when": "never"}}],
    "react/jsx-equals-spacing": [2, "never"]
  }
}